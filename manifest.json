{
  "name": "Delivery Time Catcher",
  "version": "1.3",
  "description": "Refreshes checkout pages and alerts you when delivery times are available! Works with Prime Now, InstaCart, Costco Same-Day Delivery",
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://instacart.com/*", "https://www.instacart.com/*", "https://sameday.costco.com/*", "https://www.sameday.costco.com/*", "https://primenow.amazon.com/*","https://www.primenow.amazon.com/*"],
      "js": ["scripts/content-scripts.js"]
    }
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "web_accessible_resources": [
    "assets/*"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "manifest_version": 2
}
